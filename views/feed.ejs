<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-8 text-center">
  <div class="cards flex flex-wrap gap-[3.5rem]">
    <% allPosts.forEach((ele) => { %>
    <div class="card w-40">
      <div class="w-full h-40 bg-zinc-700 rounded-lg overflow-hidden">
        <img
          src="/images/uploads/<%= ele.image%>"
          class="w-full h-full object-cover"
          alt=""
        />
      </div>
      <h5 class="mt-2 text-sm"><%= ele.title %></h5>
      <h6 class="text-xs font-semibold opacity-60 tracking-wide">
        @<%= ele.user.username %>
      </h6>
      <form action="/liked" method="post">
        <input type="hidden" name="postId" value="<%= ele._id %>" />
        <button
          type="submit"
          class="mt-2 text-xs bg-red-700 hover:bg-red-800 text-white font-bold py-1 px-2 rounded"
        >
          Like
        </button>
      </form>
    </div>
    <% }) %>
  </div>
</div>

<% include ./partials/footer.ejs%>
